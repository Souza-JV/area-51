    <script>
        ob = () => {
            let meta = document.getElementById('meta')

            let objeto = document.createElement('div')
            objeto.className = 'objeto'

            let fechar = document.createElement('div') 
            fechar.className = 'fechar'
            fechar.innerHTML = 'X'

            let dever = document.createElement('p')
            dever.innerHTML = 'meta'

            objeto.appendChild(fechar)

            document.querySelector('main').appendChild(objeto)  
            

        }
        window.onload = ob
